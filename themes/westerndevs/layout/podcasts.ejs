<!--SUBHEAD STARTS-->
<div class="WrapperSubHeaderSubpage">
<center>
	<div class="SubHeader">
		<H1 class="title"><img class="icon" src="/images/icon_podcasts.png" alt="PODCASTS" title="PODCASTS" border="0"> PODCASTS</H1>
	</div>
</center>
</div>
<!--SUBHEAD ENDS-->


<!--PAGE CONTENT STARTS-->
<center>
<div class="WrapperContent">


<!--MAIN CONTENT STARTS-->
	<div class="SubpageBoxFull">
		<div class="SubpageBoxFullContent">
	        <% var last; %>
			<%
				var cat = site.categories.findOne({"name": "podcasts"});
			%>

			<% cat.posts.sort('date', -1).each(function(post){ %>
		    <% var year = post.date.year(); %>
		    <% if (last != year){ %>
		      <% last = year; %>
		      <h2 class="category-heading"><img class="icon" src="/images/icon_circle_arrow.png" alt=">" title=">" border="0"> <%= year %> PODCASTS</h2>
		    <% } %>
			<div class="ListLrgSubBG">
			<div class="ListLrgDateBG">
			  <div class="ListLrgDateMonth"><%= moment(post.date).format('MMM').toUpperCase() %></div>
			  <div class="ListLrgDateDay"><%= moment(post.date).format('D') %></div>
			</div>
			<div class="ListLrgTxtSub">
			  <a class="posts" href="<%- url_for(post.path) %>"><%= post.title || '(no title)' %></a><br/>
			  <% if (post.author && post.author.name ) { %>
			  <B><%= post.author.name %></B><BR>
			  <% } %>
			  <% if (post.excerpt) { %>
			    <%= trim(strip_html(post.excerpt)) %>
			  <% } %>
			</div>
			</div>
			<% }) %>

		</div>
	</div>
<!--MAIN CONTENT ENDS-->


</div>
</center>
<!--PAGE CONTENT ENDS-->
