<script>
	$(document).ready(function() {
		$.getJSON( "/api/authorList.json", function( data ) {
			var numberOfAuthors = data.length;
			var authorIndex = Math.floor((Math.random() * data.length));
			var author = data[authorIndex];
			if (author) {
				$("#authorName").text(author.name);
			console.log("Author: " + author.avatar);
				if (author.avatar) {
					$("#authorAvatar").attr("src", "/images/avatars/" + author.avatar);
				} else if (author.gravatar) {
					$("#authorAvatar").attr("src", "http://www.gravatar.com/avatar/" + author.gravatar + "?s=150");
				}
				$("#authorBio").html(author.bio);
				$("#authorUrl").attr("href", "/bios/" + author.authorId);
			}
		});
	});
</script>
